<Window x:Class="BasicClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicClicker"
        mc:Ignorable="d"
        Title="BasicClicker" Height="300" Width="500"
        MinHeight="200" MinWidth="300"
        SizeToContent="Manual">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Label x:Name="lblStatus" Content="Window didn't load right it seems"
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"
               FontSize="16"
               Grid.Row="0"/>

        <Label x:Name="lblStartStop" Content="Press F6 to start clicker"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="20"
               Grid.Row="1"/>

        <Label Content="Alternatively, you could click this button."
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="12"
               Grid.Row="2"/>

        <Button x:Name="btnStart" Content="Start (F6)"
                Width="150" Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                Grid.Row="3"/>
    </Grid>
</Window>
